<h1>Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_url, subdmain: 'my_subdmain' %>

<% @portfolio_items.each do |portfolio_item| %>
	<p><%= link_to portfolio_item.title, portfolio_show_path(portfolio_item) %></p>
	<p><%= portfolio_item.subtitle %></p>
	<p><%= portfolio_item.body %></p>
	<%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %>
	<%= link_to "編集", edit_portfolio_path(portfolio_item) %>
  <%= link_to '削除', portfolio_path(portfolio_item), method: :delete, data: { confirm: '削除していいかい？' } %>
<% end %>